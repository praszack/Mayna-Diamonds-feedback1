// Firestore Security Rules for Mayna Diamonds Feedback
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow anyone to write feedback (for form submissions)
    // But only allow reading feedback with authentication (for admin)
    match /feedback/{documentId} {
      // Allow anyone to create new feedback documents
      allow create: if isValidFeedback(request.resource.data);
      
      // Only allow authenticated users to read feedback (for admin dashboard)
      allow read: if request.auth != null;
      
      // Don't allow updates or deletes for security
      allow update, delete: if false;
    }
    
    // Function to validate feedback data structure
    function isValidFeedback(data) {
      return data != null
        && data.keys().hasAll(['name', 'whatsapp', 'submittedAt'])
        && data.name is string
        && data.whatsapp is string
        && data.submittedAt is timestamp
        && data.size() <= 15; // Limit number of fields for security
    }
    
    // Deny all other document access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}