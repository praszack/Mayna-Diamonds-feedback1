{
  "hosting": {
    "public": ".",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**",
      "server.js",
      "package.json",
      "package-lock.json",
      "Dockerfile",
      "cloudbuild.yaml",
      "README.md"
    ],
    "rewrites": [
      {
        "source": "/",
        "destination": "/index.html"
      },
      {
        "source": "/feedback",
        "destination": "/mayna-diamonds-feedback.html"
      },
      {
        "source": "/admin",
        "destination": "/admin-dashboard.html"
      }
    ]
  },
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  }
}